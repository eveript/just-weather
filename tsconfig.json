{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": ["dom", "esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": false,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": ["./src/**/*.ts", "./src/**/*.js"],
    "exclude": ["./node_modules"]
}
